# TinyScheduler Configuration
# Copy to .env and customize

# Base paths
TINYSCHEDULER_BASE_PATH=/data
TINYSCHEDULER_RUNNING_DIR=/data/running
TINYSCHEDULER_LOG_DIR=/data/logs
TINYSCHEDULER_RECIPES_DIR=/config/recipes
TINYSCHEDULER_BIN_DIR=/app/bin
TINYSCHEDULER_TASK_CACHE_DIR=/data/cache
TINYSCHEDULER_LOCK_FILE=/data/scheduler.lock
TINYSCHEDULER_AGENT_CONTROL_FILE=/config/agents.json

# Agent configuration (JSON)
TINYSCHEDULER_AGENT_LIMITS={"dispatcher": 1, "worker": 3}

# Goose binary location
TINYSCHEDULER_GOOSE_BIN=/usr/local/bin/goose

# TinyTask MCP endpoint
TINYSCHEDULER_MCP_ENDPOINT=http://tinytask:3000

# Scheduler loop interval (seconds)
TINYSCHEDULER_LOOP_INTERVAL_SEC=60
